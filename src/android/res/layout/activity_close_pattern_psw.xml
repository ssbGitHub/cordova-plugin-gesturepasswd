<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_logo" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="尊敬的用户：xxx 您好！"
        android:textColor="@color/colorBlack"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/hint_login_info"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:text="输入手势来解锁"
        android:textColor="@color/bak_blue"
        android:textSize="16sp" />

    <org.apache.cordova.gesture.ChaosGestureView
        android:id="@+id/gesture_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        app:minPoint="5"
        app:paintColor="@color/bak_blue"
        app:paintTextSize="15sp"
        app:panelHeight="0"
        app:selectedBitmap="@mipmap/icon_finger_selected"
        app:selectedBitmapSmall="@mipmap/icon_finger_selected_small"
        app:stateFlag="100"
        app:unselectedBitmap="@mipmap/icon_finger_unselected"
        app:unselectedBitmapSmall="@mipmap/icon_finger_unselected_new" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget_gesture_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="45dp"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:text="忘记手势密码"
            android:textColor="@color/bak_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/passwd_login_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingTop="10dip"
            android:paddingRight="45dp"
            android:paddingBottom="10dip"
            android:text="使用账号登录"
            android:textColor="@color/bak_blue"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
